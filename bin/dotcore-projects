#!/usr/bin/env bash

#
# Set up project structure
#

set -e

should-run -m 7 $0 || exit 0

$(shim) && cd ${DOTCORE_DIR} && . bin/i.sh

# Source code in projects directory
if [[ ! -d "~/projects" ]]; then
  log:: "Creating projects directory"
  mkdir ~/projects
fi

# Notes in projects/things directory
if [[ ! -d "~/projects/things" ]]; then
  log:: "Creating projects/things directory"
  mkdir ~/projects/things
fi

should-run -fu $0
